@using SAEON.Observations.QuerySite.Models
@model TemporalCoverageModel
@(
Html.EJ().TreeView("treeViewLocations")
    .TreeViewFields(field => field
        .Datasource(ds => ds.URL("/TemporalCoverage/GetLocations").Adaptor(AdaptorType.WebApiAdaptor))
        .Id("Key")
        .ParentId("ParentKey")
        .Text("Text")
        .HasChild("HasChildren")
        .IsChecked("IsChecked")
        .Expanded("IsExpanded")
        .Selected("IsSelected")
    )
    .ClientSideEvents(events => events
        .NodeCheck("onUpdateSelectedLocations")
        .NodeUncheck("onUpdateSelectedLocations"))
    .ShowCheckbox(true)
    .AllowMultiSelection(false)
)
<script type="text/javascript">
    function onUpdateSelectedLocations() {
        treeObj = $("#treeViewLocations").data('ejTreeView');
        var nodes = treeObj.getCheckedNodes();
        var selected = []
        for (i = 0; i < nodes.length; i++) {
            var nodeData = treeObj.getNode(nodes[i]);
            selected.push(nodeData.id);
        }
        $.post("/TemporalCoverage/UpdateSelectedLocations", { Locations: selected })
            .done(function (data) {
                $('#PartialSelectedLocations').html(data);
                EnableButtons();
                HideResults();
            })
            .fail(function () { alert("Error in UpdateSelectedLocations");});
    }
</script>
