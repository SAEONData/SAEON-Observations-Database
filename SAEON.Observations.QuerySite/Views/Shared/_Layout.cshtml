            instrumentationKey: 'cf180c84-e427-4073-acbf-a78ded1b5f42'
        });

        window.appInsights = appInsights;
        appInsights.trackPageView();
    </script>
</head>
<body class="bg-SAEON" id="Document">
    <div id="Page" class="container-fluid bg-white text-dark rounded">
        <header id="Header">
            <div class="row">
                <div class="col-md text-center">
                    <img class="Logo img-fluid" src="~/Images/SAEON 20th Logo.png" alt="SAEON Banner" title="© SAEON" />
                </div>
            </div>
            <nav class="navbar navbar-expand-sm navbar-dark bg-SAEON rounded">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Query</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Inventory", "Index", "Inventory", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Data", "Index", "DataWizard", null, new { @class = "dropdown-item" })
                                @*<a class="dropdown-item" href="#">Spacial Coverage</a>
                                    <a class="dropdown-item" href="#">Temporal Coverage</a>*@
                            </div>
                        </li>
                        @Html.Partial("_AdminPartial")
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </nav>
            <h1>
                @if (ViewBag.Title == "Observations Database" || string.IsNullOrWhiteSpace(ViewBag.Title))
                {
                    <text>Observations Database</text>
                }
                else
                {
                    <text>Observations Database</text> @:&ndash; @ViewBag.Title
                    if (!string.IsNullOrWhiteSpace(ViewBag.Description))
                    {
                        <small>@Html.Raw(ViewBag.Description)</small>
                    }
                }
            </h1>
        </header>
        <div id="Body">
            @RenderBody()
        </div>
        <footer id="Footer">
            <div class="row">
                <div class="col-md">
                    <br />
                    &copy; @DateTime.Now.Year - South African Environmental Observation Network (SAEON)<br />
                    <a rel="license" href="https://creativecommons.org/licenses/by-sa/4.0/" target="_blank">
                        <img alt="Creative Commons License" class="footer-image" src="https://i.creativecommons.org/l/by-sa/4.0/88x31.png" />
                    </a>
                    <br />
                    <div style="clear: both">
                        Observations Database is licensed under a <a rel="license" target="_blank" href="https://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0 International License</a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="float-right">
                        <a href="https://www.dst.gov.za/" target="_blank">
                            <img class="footer-image" src="~/Images/DST logo.png" alt="Department of Science and Technology logo" title="Department of Science and Technology" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/node_modules/mdbootstrap/js/jquery-3.3.1.min.js")
    @Scripts.Render("~/node_modules/mdbootstrap/js/popper.min.js")
    @Scripts.Render("~/node_modules/mdbootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/node_modules/mdbootstrap/js/mdb.min.js")
    @Scripts.Render("~/Scripts/jsrender.min.js")
    @Scripts.Render("~/Scripts/ej/web/ej.web.all.min.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("Scripts", required: false)
    @Html.EJ().ScriptManager()
</body>
</html>