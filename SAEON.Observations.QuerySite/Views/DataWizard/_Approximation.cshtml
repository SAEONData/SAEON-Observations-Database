@using SAEON.Observations.QuerySite.Models
@model DataWizardModel
<div class="row">
    <div class="col-md">Approximate # rows: @Model.Approximation.RowCount.ToString("n0")</div>
</div>
<div class="ErrorRow @(Model.Approximation.Errors.Count == 0 ? "" : "hidden")">
    @foreach (var status in Model.Approximation.Errors)
    {
    <div class="row">
        <div class="col-md">@status</div>
    </div>
    }
</div>