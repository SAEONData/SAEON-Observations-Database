@using SAEON.Observations.QuerySite.Models
@using Syncfusion.JavaScript.DataVisualization
@using System.Data
@model DataWizardModel
@(Html.EJ().Chart("chartResults")
    .PrimaryXAxis(px => px.ValueType(AxisValueType.Datetime).LabelFormat("MMM yyyy"))
    .PrimaryYAxis(py => py.ValueType(AxisValueType.Double))
    .Series( sr =>
    {
        foreach (var series in Model.Output.ChartSeries)
        {
            sr.Name(series.Caption)
                .Type(SeriesType.Line)
                .DataSource(series.Data)
                //.DataSource(ds => ds.URL($"/DataWizard/GetChartData/{series.Name}"))
                .XName("Date")
                .YName("Value")
                .Add();
        }
    })
    .Legend(lgn => lgn.Visible(true))
    .Size(sz => sz.Width("1200").Height("800"))
    .EnableCanvasRendering(true)
    .IsResponsive(true)
    .Zooming(zm => zm
        .Enable(true)
        .EnableMouseWheel(true)
        .EnablePinching(true)
        .EnableScrollbar(true)
    )
)
@Html.EJ().ScriptManager()

