@using SAEON.Core
@using SAEON.Observations.Auth
@inject Microsoft.Extensions.Configuration.IConfiguration config
@{
    ViewData["Title"] = "Create ODP Metadata";
}

<div class="row">
    <div class="col-md">
        <form class="md-form" method="post" onsubmit='disableStart()'>
            <div class="form-group">
                <button asp-controller="Admin" asp-action="APICreateODPMetadata" class="btn btn-primary">Start</button>
            </div>
        </form>
        <ul id="ulStatus"></ul>
    </div>
</div>

@section Scripts {
    <script src="~/node_modules/@@microsoft/signalr/dist/browser/signalr.js"></script>
    <environment include="Development">
        <script src="~/js/Admin.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Admin.min.js"></script>
    </environment>

    <script>
        "use strict";
        setupHub('@config["WebAPIUrl"].AddTrailingForwardSlash()' + 'AdminHub', '@SignalRDefaults.CreateODPMetadataStatusUpdate');
    </script>
}

