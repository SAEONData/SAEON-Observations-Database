@section Scripts {
    <script type="text/javascript">
        $(function () {
            var tabObj = document.getElementById('DataWizardTabs').ej2_instances[0];
            tabObj.animation.previous.effect = 'none';
            tabObj.animation.next.effect = 'none';
        });
    </script>
}
