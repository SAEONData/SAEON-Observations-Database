@using Syncfusion.EJ2.Navigations;
@{
    ViewData["Title"] = "Data";
}
@{
    var tabs = new List<TabTabItem> {
        new TabTabItem{ Header= new TabHeader{ Text = "Locations"}, Content = "Locations content" },
        new TabTabItem{ Header= new TabHeader{ Text = "Phenomena"}, Content = "Phenomena content" },
        new TabTabItem{ Header= new TabHeader{ Text = "Filters"}, Content = "Filters content" },
        new TabTabItem{ Header= new TabHeader{ Text = "Stations"}, Content = "Stations content" },
        new TabTabItem{ Header= new TabHeader{ Text = "Table"}, Content = "Table content" },
        new TabTabItem{ Header= new TabHeader{ Text = "Chart"}, Content = "Chart content" }
    };
}
